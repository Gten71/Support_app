        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QuestionActivity" />
        <activity
            android:name=".DefaultUserScreen.UserActivity"
            android:label="User Activity" />
        <activity
            android:name=".ChatActivity" />
        <activity
            android:name=".EmployerScreen.RespondActivity"
            android:label="Respond Activity" />
        <activity android:name=".EmployerQuestionActivity"/>
        <activity
            android:name=".DefaultUserScreen.AnsweresActivity"
            android:label="Answeres Activity" />
