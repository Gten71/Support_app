        </activity>
        <activity
            android:name=".EmployerScreen.EmployerActivity"
            android:label="Employer Activity" />
        <activity
            android:name=".DefaultUserScreen.TextEntryActivity"
            android:label="Text Entry" />

    </application>

</manifest>